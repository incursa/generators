{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bravellian.com/schemas/string-backed-type.schema.json",
  "title": "String Backed Type",
  "description": "Schema for Bravellian string-backed value types (.string.json)",
  "type": "object",
  "required": ["name", "namespace"],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the value type",
      "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
    },
    "namespace": {
      "type": "string",
      "description": "The .NET namespace for the generated type",
      "pattern": "^[A-Za-z_][A-Za-z0-9_.]*$"
    },
    "validationRegex": {
      "type": "string",
      "description": "Regular expression pattern for validation of the string value"
    },
    "validationRegexConstant": {
      "type": "string",
      "description": "Constant name for the validation regex pattern"
    },
    "properties": {
      "type": "array",
      "description": "Additional properties to add to the value type",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "description": "The property name",
            "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
          },
          "type": {
            "type": "string",
            "description": "The .NET type for this property",
            "examples": ["string", "int", "bool", "DateTime", "decimal"]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "name": "EmailAddress",
      "namespace": "Bravellian.ValueTypes",
      "validationRegex": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$",
      "validationRegexConstant": "EmailValidationPattern"
    },
    {
      "name": "PhoneNumber",
      "namespace": "Bravellian.ValueTypes",
      "validationRegex": "^\\+?[1-9]\\d{1,14}$",
      "properties": [
        {
          "name": "CountryCode",
          "type": "string"
        },
        {
          "name": "IsInternational",
          "type": "bool"
        }
      ]
    }
  ]
}
