{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bravellian.com/schemas/dto-entity.schema.json",
  "title": "DTO/Entity Type",
  "description": "Schema for Bravellian DTO and Entity types (.dto.json, .entity.json)",
  "type": "object",
  "required": ["name", "namespace"],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the DTO/Entity class",
      "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
    },
    "namespace": {
      "type": "string",
      "description": "The .NET namespace for the generated class",
      "pattern": "^[A-Za-z_][A-Za-z0-9_.]*$"
    },
    "parent": {
      "type": "string",
      "description": "The parent type name if this is a nested type",
      "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
    },
    "inherits": {
      "type": "string",
      "description": "The base class or interfaces to inherit from",
      "examples": ["BaseDto", "IValidatable", "BaseEntity, ITimestamped"]
    },
    "abstract": {
      "type": "boolean",
      "description": "Whether this is an abstract class",
      "default": false
    },
    "accessibility": {
      "type": "string",
      "description": "The access modifier for the class",
      "enum": ["public", "internal", "protected", "private"],
      "default": "public"
    },
    "documentation": {
      "type": "string",
      "description": "XML documentation comment for the class"
    },
    "classOnly": {
      "type": "boolean",
      "description": "Generate only the class content without namespace wrapper",
      "default": false
    },
    "properties": {
      "type": "array",
      "description": "The properties of the DTO/Entity",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "description": "The property name",
            "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
          },
          "type": {
            "type": "string",
            "description": "The .NET type for this property",
            "examples": ["string", "int", "bool", "DateTime", "Guid", "decimal", "List<string>", "CustomType"]
          },
          "required": {
            "type": "boolean",
            "description": "Whether this property is required",
            "default": false
          },
          "nullable": {
            "type": "boolean",
            "description": "Whether this property can be null",
            "default": false
          },
          "settable": {
            "type": "boolean",
            "description": "Whether this property has a setter (true) or only init (false)",
            "default": true
          },
          "noDefault": {
            "type": "boolean",
            "description": "Whether to suppress default value validation for required properties",
            "default": false
          },
          "max": {
            "type": "string",
            "description": "Maximum value/length constraint",
            "examples": ["100", "255", "2023-12-31"]
          },
          "min": {
            "type": "string",
            "description": "Minimum value/length constraint",
            "examples": ["1", "0", "1900-01-01"]
          },
          "regex": {
            "type": "string",
            "description": "Regular expression pattern for validation"
          },
          "jsonProperty": {
            "type": "string",
            "description": "Custom JSON property name for serialization"
          },
          "defaultValue": {
            "type": "string",
            "description": "Default value for the property (e.g., '\"default\"', '0', 'true', 'new List<string>()')",
            "examples": ["\"default value\"", "0", "true", "DateTime.UtcNow", "new List<string>()"]
          },
          "expression": {
            "type": "string",
            "description": "C# expression for computed properties",
            "examples": ["$\"{FirstName} {LastName}\"", "DateTime.UtcNow"]
          },
          "documentation": {
            "type": "string",
            "description": "XML documentation comment for the property"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "name": "PersonDto",
      "namespace": "Bravellian.Models.Dtos",
      "documentation": "Represents a person data transfer object",
      "properties": [
        {
          "name": "Id",
          "type": "Guid",
          "required": true,
          "noDefault": true,
          "documentation": "The unique identifier for the person"
        },
        {
          "name": "FirstName",
          "type": "string",
          "required": true,
          "max": "50",
          "min": "1",
          "documentation": "The person's first name"
        },
        {
          "name": "LastName",
          "type": "string",
          "required": true,
          "max": "50",
          "min": "1",
          "documentation": "The person's last name"
        },
        {
          "name": "Email",
          "type": "string",
          "required": true,
          "max": "255",
          "regex": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$",
          "jsonProperty": "email_address",
          "documentation": "The person's email address"
        },
        {
          "name": "Age",
          "type": "int?",
          "nullable": true,
          "min": "0",
          "max": "150",
          "documentation": "The person's age in years"
        },
        {
          "name": "FullName",
          "type": "string",
          "expression": "$\"{FirstName} {LastName}\"",
          "documentation": "The person's full name"
        },
        {
          "name": "CreatedAt",
          "type": "DateTime",
          "required": true,
          "settable": false,
          "documentation": "When the record was created"
        }
      ]
    }
  ]
}
