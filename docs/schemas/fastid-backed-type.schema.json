{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://incursa.com/schemas/fastid-backed-type.schema.json",
  "title": "FastId Backed Type",
  "description": "Schema for Incursa FastId-backed value types (.fastid.json)",
  "type": "object",
  "required": ["name", "namespace"],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the FastId type",
      "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
    },
    "namespace": {
      "type": "string",
      "description": "The .NET namespace for the generated type",
      "pattern": "^[A-Za-z_][A-Za-z0-9_.]*$"
    },
    "properties": {
      "type": "array",
      "description": "Additional properties to add to the FastId type",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "description": "The property name",
            "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
          },
          "type": {
            "type": "string",
            "description": "The .NET type for this property",
            "examples": ["string", "int", "bool", "DateTime", "decimal"]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "name": "UserId",
      "namespace": "Incursa.Identifiers"
    },
    {
      "name": "OrderId",
      "namespace": "Incursa.Identifiers",
      "properties": [
        {
          "name": "CreationTimestamp",
          "type": "DateTime"
        },
        {
          "name": "OriginSystem",
          "type": "string"
        }
      ]
    }
  ]
}
